@model IEnumerable<MeFirst.Models.Treatments>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Moisturizer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Retinal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Toner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SkinTypeId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Moisturizer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Retinal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Toner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Spf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SkinTypeId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TreatmentsId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TreatmentsId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TreatmentsId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
